<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/common_list_item_background_selector0" >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:paddingBottom="20dp"
    	android:paddingTop="20dp"
        android:background="@drawable/message_list_item_background_selector" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/iv_message_image"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_message_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="3dp"
                android:ellipsize="middle"
                android:maxLines="2"
                android:singleLine="false"
                android:textSize="@dimen/message_list_item_title_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_message_department"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/message_list_item_time_department_text_size" />

                <TextView
                    android:id="@+id/tv_message_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textSize="@dimen/message_list_item_time_department_text_size" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_message_image"
            android:layout_width="@dimen/message_list_item_pic_width"
            android:layout_height="@dimen/message_list_item_pic_height"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:scaleType="fitXY" 
            android:contentDescription="@null"/>
    </RelativeLayout>

</FrameLayout>