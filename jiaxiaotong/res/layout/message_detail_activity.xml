<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <com.hikvision.parentdotworry.costomui.TitleBar
        android:id="@+id/tb_title_bar"
       	style="@style/title_bar_style"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tb_title_bar"
        android:orientation="vertical"
        android:padding="@dimen/message_detail_main_padding" >
		 <TextView
                android:id="@+id/tv_message_detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/message_detail_title_text_size"
                android:layout_marginTop="4dp"
                android:textColor="@color/message_detail_title_text_color"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/tv_message_detail_page_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right" 
                android:textColor="@color/message_detail_department_time_text_color"
                android:textSize="@dimen/message_detail_depart_time_text_size"/>

            <TextView
                android:id="@+id/tv_message_detail_page_department"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="left"
                android:orientation="horizontal" 
                android:textColor="@color/message_detail_department_time_text_color"
                android:textSize="@dimen/message_detail_depart_time_text_size"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_message_detail_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:layout_marginTop="16dp"
            android:scaleType="fitXY"
            android:contentDescription="@null"/>

        <TextView
            android:id="@+id/tv_message_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp" />
    </LinearLayout>

</RelativeLayout>