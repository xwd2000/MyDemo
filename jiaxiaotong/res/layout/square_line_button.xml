<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/tv_top_v_line"
        android:layout_width="1dp"
        android:layout_height="match_parent" 
        android:background="@android:color/darker_gray"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>
    <Button
        android:id="@+id/bt_student_do_school"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:background="@drawable/one_dp_board_background"
        android:text="@string/main_student_enter_school"
        android:padding="10dp"
        android:layout_below="@+id/tv_top_v_line"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tv_square_button_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
 		android:text="@string/main_time_test_2"
 		android:textSize="12sp"
 		android:layout_below="@+id/bt_student_do_school"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>