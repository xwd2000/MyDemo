<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" 
    android:orientation="vertical">

    <com.hikvision.parentdotworry.costomui.TitleBar
        android:id="@+id/tb_title_bar"
        style="@style/title_bar_style"
        />

    <com.hikvision.parentdotworry.costomui.tabview.SlidingTabLayout
         android:id="@+id/stl_sliding_tabs"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />

    <com.hikvision.parentdotworry.costomui.MessageViewPaper
        android:id="@+id/vp_list_page"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
         />

</LinearLayout>