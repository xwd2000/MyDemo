<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <com.hikvision.parentdotworry.costomui.TitleBar
        android:id="@+id/tb_title_bar"
       style="@style/title_bar_style"
        android:layout_alignParentTop="true" />

    <com.hikvision.parentdotworry.costomui.TabSelectContainer
        android:id="@+id/hsc_child_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tb_title_bar"
        android:scrollbars="none" 
        android:paddingBottom="1dp"
        android:background="@drawable/tc_background"/>
	
    
    <com.hikvision.parentdotworry.costomui.MessageViewPaper
        android:id="@+id/vp_list_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/hsc_child_select" />

</RelativeLayout>