<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_line_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/iv_main_time_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="6dp"
            android:background="@color/main_time_line_background" />

        <ImageView
            android:id="@+id/iv_main_time_line_need_in_school"
            android:layout_width="39dp"
            android:layout_height="4dp"
            android:background="@color/main_status_green" 
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_main_small_circle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/main_tip_circle_small" 
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_main_small_circle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/main_tip_circle_small" 
            android:visibility="gone"/>
    </RelativeLayout>
	<RelativeLayout  
	    android:id="@+id/rl_time_text_container"
	    android:layout_width="match_parent"
        android:layout_height="wrap_content">
	    <TextView 
	        android:id="@+id/tv_time_bar_school_time_in"
	        android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_time_test"
            android:visibility="gone"/> 
	     <TextView 
	        android:id="@+id/tv_time_bar_school_time_out"
	        android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_time_test"
            android:visibility="gone"/>
	</RelativeLayout>
	<RelativeLayout  
	    android:id="@+id/rl_time_pic_container"
	    android:layout_width="match_parent"
        android:layout_height="wrap_content">
	    <ImageView 
	        android:id="@+id/iv_time_bar_school_time_in"
	        android:layout_width="wrap_content"
            android:layout_height="wrap_content"/> 
	     <ImageView 
	        android:id="@+id/iv_time_bar_school_time_out"
	        android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
	</RelativeLayout>
</LinearLayout>